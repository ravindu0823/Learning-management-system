<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lecture_mat_color"
    android:orientation="vertical"
    tools:context=".CourseWorks">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/courcework_pic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Slide1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_picture_as_pdf_24"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="Final Courcework"
                android:textColor="@color/lecture_mat_text_color"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDueDate"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:paddingStart="35dp"
                android:text=""
                android:textColor="@color/lecture_mat_text_color"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnDownloadCourseWork"
            android:layout_width="133dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/dark_blue"
            android:minHeight="48dp"
            android:text="Download"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtFinalReportSubmission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:drawableStart="@drawable/link"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="Final Report Submission"
        android:textColor="@color/lecture_mat_text_color"
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>