<?xml version="1.0" encoding="utf-8"?>

<!-- the root view must be the DrawerLayout -->

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Assignment"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="2dp"
        android:dividerPadding="12dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text1"
            android:layout_width="69dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"

            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="PDF"
            android:textColor="#020202"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textReportPDF"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/pdf"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="Report Submission"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textReportLink"
            android:layout_width="242dp"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/link"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="Report Submission"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="69dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"

            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="WORD"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textReportWORD"
            android:layout_width="373dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/msword"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="Report Submission"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textReportWORDLINK"
            android:layout_width="242dp"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/link"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="Report Submission"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="69dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"

            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="QUIZ"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textReportQUIZ"
            android:layout_width="373dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:drawableStart="@drawable/quiz"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="Report Submission"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textReportQUIZLink"
            android:layout_width="242dp"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/link"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="Report Submission"
            android:textSize="22sp" />

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>
